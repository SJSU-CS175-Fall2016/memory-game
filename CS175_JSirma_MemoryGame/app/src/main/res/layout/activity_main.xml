<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.joan.cs175_jsirma_memorygame.MainActivity"
    android:background="#d2060505"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the NBA Matching Game"
        android:id="@+id/textView"
        android:layout_weight="0.03"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="#1e98f3"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Game"
        android:id="@+id/play"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:onClick="displayGame"
        android:textSize="25dp"
        android:clickable="true"
        android:textStyle="bold"
        android:textColor="#1e98f3"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Rules"
        android:id="@+id/rules"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="displayRules"
        android:textSize="20dp"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:textColor="#1e98f3"
        android:layout_marginTop="50dp" />

</LinearLayout>

